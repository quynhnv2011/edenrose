    <script>
        function validatePhone(txtPhone) {
            var filter = /^((\+[1-9]{1,4}[ \-]*)|(\([0-9]{2,3}\)[ \-]*)|([0-9]{2,4})[ \-]*)*?[0-9]{3,4}?[ \-]*[0-9]{3,4}?$/;
            if (filter.test(txtPhone)) {
                return true;
            }
            else {
                return false;
            }
        }
        $(document).ready(function () {
            var isSubmit = false;
            $('.btnformlayout').click(function () {
                $('.btnformlayout').prop('disabled', true);
                var name = $('#txtNameLayout').val();
                if (name == null || name.trim() == "") {
                    $('#txtNameLayoutNoti').show();
                    return false;
                } else {
                    $('#txtNameLayoutNoti').hide();
                }
                var email = $('#txtEmailLayout').val();
                if (email == null || email.trim() == "") {
                    $('#txtEmailLayoutNoti').show();
                    return false;
                } else {
                    $('#txtEmailLayoutNoti').hide();
                }

                var phone = $('#txtPhoneLayout').val();
                if (phone == null || phone.trim() == "") {
                    $('#txtPhoneLayoutNoti').show();
                    return false;
                } else {
                    $('#txtPhoneLayoutNoti').hide();
                }
                if (!validatePhone(phone)) {
                    $('#notifiLayout').text('Vui lòng nhập đúng định dạng số điện thoại');
                    $('#notifiLayout').show();
                    return false;
                } else {
                    $('#notifiLayout').text('');
                }
                if (!isSubmit) {
                    isSubmit = true;
                    window.location = '../TinTuc/Resign?email=' + email + '&phone=' + phone + '&name=' + name;
                    $('#notifiLayout').text('Cảm ơn bạn ' + name + ' đã đăng ký nhận thông tin dự án The Eden Rose. Chúng tôi sẵn sàng phục vụ bạn 24/7')
                    $('#notifiLayout').show();
                    $('.btnformlayout').removeAttr('disabled');
                    $('#txtNameLayout').val('');
                    $('#txtEmailLayout').val('');
                    $('#txtPhoneLayout').val('');
                    isSubmit = false;
