                    //        name: name
                    //    },
                    //    success: function (response) {
                    //        $('#notifi').text('Đăng ký nhận thông tin bảng giá thành công!')
                    //        $('#notifi').show();
                    //        $('.btnformlayout').removeAttr('disabled');
                    //        isSubmit = false;
                    //    },
                    //    error: function () {
                    //        $('#notifi').text('Thông tin không hợp lệ. Vui lòng kiểm tra lại!')
                    //        $('#notifi').show();
                    //        $('.btnformlayout').removeAttr('disabled');
                    //        isSubmit = false;
                    //    }
                    //});
                }
              
            });
        });
