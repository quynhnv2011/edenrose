<script>
        function validatePhone(txtPhone) {
            var filter = /^((\+[1-9]{1,4}[ \-]*)|(\([0-9]{2,3}\)[ \-]*)|([0-9]{2,4})[ \-]*)*?[0-9]{3,4}?[ \-]*[0-9]{3,4}?$/;
            if (filter.test(txtPhone)) {
                return true;
            }
            else {
                return false;
            }
        }
        $(document).ready(function () {
            $('.btnform').click(function () {
                debugger
                $('.btnform').prop('disabled', true);
                var name = $('#txtName').val();
                if (name == null || name.trim() == "") {
                    $('#txtNameNoti').show();
                    return false;
                } else {
                    $('#txtNameNoti').hide();
                }
                var email = $('#txtEmail').val();
                if (email == null || email.trim() == "") {
                    $('#txtEmailNoti').show();
                    return false;
                } else {
                    $('#txtEmailNoti').hide();
                }

                var phone = $('#txtPhone').val();
                if (phone == null || phone.trim() == "") {
                    $('#txtPhoneNoti').show();
                    return false;
                } else {
                    $('#txtPhoneNoti').hide();
                }
                if (!validatePhone(phone)) {
                    $('#notifi').text('Vui lòng nhập đúng định dạng số điện thoại');
                    $('#notifi').show();
                    return false;
                } else {
                    $('#notifi').text('');
                }

                $.ajax({
                    url: '../TinTuc/Resign',
                    type: 'post',
                    dataType: 'text',
                    data: {
                        email: email,
                        phone: phone,
                        name: name
                    },
                    success: function (response) {

                        $('#notifi').text('Đăng ký nhận thông tin thành công!')
                        $('#notifi').show();
                        $('.btnform').removeAttr('disabled');
                    },
                    error: function () {
                        $('#notifi').text('Thông tin không hợp lệ. Vui lòng kiểm tra lại!')
                        $('#notifi').show();
                        $('.btnform').removeAttr('disabled');
                    }
                });
            });
        });
</script>

