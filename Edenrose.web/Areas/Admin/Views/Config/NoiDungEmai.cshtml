@model Edenrose.Data.EF.Config
@{
    ViewBag.Title = "Thêm mới";
    if (Model.id > 0)
    {
        ViewBag.Title = "Cập nhật";
    }
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-8" data-widget-editbutton="false" data-widget-custombutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Cấu hình</h2>

                        <div class="btn-command">

                        </div>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        @using (Html.BeginForm("NoiDungEmai", "Config", FormMethod.Post, new { @id = "addForm", enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(model => model.id)
                            @Html.HiddenFor(model => model.Name)
                            <div class="widget-body no-padding  smart-form">
                                <fieldset>

                                    <div class="row">

                                        <section class="col col-6">
                                            <label class="label">Key</label>
                                            <label class="input">
                                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @disabled = "disabled" })
                                            </label>
                                        </section>
                                        <div class="clearfix"></div>
                                        <section class="col col-12">
                                            <label class="label">Value</label>
                                            <label class="input">
                                                @Html.TextAreaFor(model => model.Value, new { @id = "txtContent" })
                                                @*@Html.TextAreaFor(model => model.Value, new { @class = "form-control", @rows = "4", @id= "txtContent" })
                                                @Html.ValidationMessageFor(model => model.Value)*@
                                            </label>
                                        </section>

                                    </div>
                                    <div class="clearfix"></div>
                                    <footer class="text-center">
                                        <a href="javascript:history.back(-1);" class="btn btn-default">Quay lại</a>
                                        <a href="javascript: void(0);" class="btn btn-primary" onclick="return SubmitForm()">@ViewBag.Title</a>
                                    </footer>
                                </fieldset>
                            </div>
                        }
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>

    <!-- end widget grid -->
</div>
@section Script{
    <script>
        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/plugins/ckeditor/config.js'
        });
        function SubmitForm() {
                $('#addForm').submit();
        }

    </script>
}
