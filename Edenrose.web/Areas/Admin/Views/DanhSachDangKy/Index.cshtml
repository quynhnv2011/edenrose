@model Edenrose.web.Areas.Admin.Models.DanhSachDangKyViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-darken" data-widget-editbutton="false">
                <header>
                    <div class="jarviswidget-ctrls" role="menu">

                    </div>
                    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                    <h2>Danh sách đăng ký nhận thông tin</h2>
                </header>
                <div>
                    <div class="jarviswidget-editbox"></div>
                    <div class="widget-body no-padding">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th style="width:40px">STT</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>SĐT</th>                                  
                                    <th>Thời gian đăng ký</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.ListData.Count > 0)
                                {
                                    var index = 0;
                                    foreach (var o in Model.ListData)
                                    {
                                        index++;
                                        <tr>
                                            <td>@index</td>
                                            <td>@o.Name</td>
                                            <td>@o.Email</td>
                                            <td>@o.Phone</td>
                                            <td>@String.Format("{0:dd/MM/yyyy | HH:mm}", o.CreatedDate)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="9">Không có bản ghi nào</td></tr>
                                }
                            </tbody>
                        </table>
                        @Html.Raw(Model.GetHtmlPaging)
                    </div>
                </div>
            </div>
        </article>
    </div>
</section>
